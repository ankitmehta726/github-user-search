<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:background="@color/colorAccent"
             android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarL"
            style="@style/ToolBarStyle.Event"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:gravity="center"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:visibility="visible"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">
        <!--android:layout_marginTop="24dp"-->

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            <ImageView
                    android:id="@+id/ivBackArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:tint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_small"
                    android:padding="@dimen/padding_general"
                    android:visibility="gone" android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_small"/>

            <ImageView
                    android:id="@+id/ivHamburger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_small"
                    android:padding="@dimen/padding_general"
                    android:visibility="visible" android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_small"/>

            <ImageView
                    android:id="@+id/ivLogout"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_small"/>

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ivHamburger"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:visibility="visible" app:fontFamily="@font/poppins_bold"
                    android:layout_toRightOf="@+id/ivHamburger"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</FrameLayout>