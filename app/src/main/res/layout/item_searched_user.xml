<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/cvUserCard"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:layout_height="@dimen/sixty_dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civUserAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="50dp"
                android:src="@color/colorPrimary"
                android:layout_margin="@dimen/margin_normal"
                android:layout_height="50dp"/>

        <TextView
                android:id="@+id/tvLoginId"
                android:layout_width="wrap_content"
                  app:layout_constraintTop_toTopOf="@id/civUserAvatar"
                  app:layout_constraintBottom_toBottomOf="@id/civUserAvatar"
                  android:layout_height="wrap_content"
                  android:text="ankitmehta726"
                  android:textSize="@dimen/text_large"
                  android:fontFamily="@font/poppins_medium"
                  android:layout_margin="@dimen/margin_normal"
                    app:layout_constraintStart_toEndOf="@id/civUserAvatar"
                  android:maxLines="1"
                  android:ellipsize="end"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>